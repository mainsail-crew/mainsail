{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "types": ["cypress", "vite/client"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "typeRoots": ["./node_modules/@types", "./node_modules/cypress/types", "./node_modules/vuetify/types"]
    },
    "include": [
        "components.d.ts",
        "src/main.ts",
        "src/*/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "cypress/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "node_modules/vite-plugin-pwa/client.d.ts"
    ],
    "exclude": ["node_modules"]
}
